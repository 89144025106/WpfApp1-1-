<Window x:Class="WpfApp1_СМ_пр_1_Гуляева.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1_СМ_пр_1_Гуляева"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="157*"/>
            <ColumnDefinition Width="215*"/>
            <ColumnDefinition Width="91*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.ColumnSpan="4">
            <Label Content="Последние документы"/>
            <Button Content="Открыть" Width=" 60" Height="30" HorizontalAlignment="Left" Click="Button_Click" />
            <Button Content="Сохронить" Width=" 60" Height="30" HorizontalAlignment="Left"/>
            <Button Content="Закрыть" Width=" 60" Height="30" HorizontalAlignment="Left"/>
            <Button Content="Обработать" Width=" 60" Height="30" HorizontalAlignment="Left"/>
            <Button Content="О програме " Width="83" Height="30" HorizontalAlignment="Left"/>
            <Button Content="A" Width="80" Height="85" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="Yellow" Click="Button_Click" />
            <Button Content="B" Width="80" Height="85" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top" Background="Red" />
            <Button Content="C" Width="80" Height="85" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="Green" />
            <Button Content="D" Width="80" Height="85" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="Blue" />
            <Button Content="E" Width="80" Height="85" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="Gray" />
            <Button Content="F" Width="80" Height="85" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top"  Background="PeachPuff" />
        </WrapPanel>
    </Grid>
</Window>
